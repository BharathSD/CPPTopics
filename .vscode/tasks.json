{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build with MSVC",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/std:c++latest",
				"/EHsc",
				"/Fe:",
				"${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
			},
			"detail": "compiler: cl.exe"
		},
		{
			"label": "Build Release with MSVC",
			"type": "cppbuild",
			"command": "cl.exe",
			"args": [
				"/O2",
				"/DNDEBUG",
				"/std:c++latest",
				"/EHsc",
				"/MD",
				"/Fe:",
				"${fileDirname}\\\\build\\\\release\\\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
			},
			"detail": "compiler: cl.exe"
		}
	]
}